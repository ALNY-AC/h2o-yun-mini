<view wx:if="{{info.state!=4 && info.state!=5 && info.state !=0}}"  class="map_container">
    <map  id="map" longitude="{{locationx}}" latitude="{{locationy}}" scale="{{15}}" markers="{{markers}}" polyline="{{polyline}}" include-points="{{includePoints}}" show-location style="width: 100%; height: 100%;"></map>
</view>
<view class="page">
    <view class="bottom">
        <view class="card" wx:if="{{info}}">
            <view class="card-head">
                <view class="left">{{info.storeInfo.name}}</view>
                <view wx:if="{{info.state==0}}" class="right">待支付</view>
                <view wx:if="{{info.state==1}}" class="right">商家已接单</view>
                <view wx:if="{{info.state==2}}" class="right">待取货</view>
                <view wx:if="{{info.state==3}}" class="right">配送中</view>
                <view wx:if="{{info.state==4}}" class="right">已完成</view>
                <view wx:if="{{info.state==5}}" class="right">订单取消</view>
            </view>
            <van-button bind:tap="http_Close">退款</van-button>
            <view class="card-body">
                <view class="info-group">
                    <block wx:for="{{info.snapshotInfo}}" wx:key="index">
                        <img-text-card radius="0" img-url="{{$app.url.imageUrl+item.snapshotInfo[0].data.goods_head_list}}" title="{{item.data.title}}" img-size="{{['100rpx','100rpx']}}" margin-b="10px">
                            <view slot="footer" class="tool">
                                <view class="quantity">x{{item.data.quantity}}</view>
                            </view>
                            <view slot="right">
                                <view class="price">￥{{item.data.quantity*item.data.price}}</view>
                            </view>
                        </img-text-card>
                    </block>
                </view>
                <view wx:if="{{info.freight_price}}" class="info-group">
                    <view class="other">
                        <text>配送费</text>
                        <text>￥{{info.freight_price}}</text>
                    </view>
                </view>
            </view>
            <view class="crad-footer">
                总计
                <text>￥{{info.price*1+info.freight_price*1}}</text>
            </view>
        </view>
        <view class="card">
            <view class="card-head">配送信息</view>
            <view class="card-body">
                <!-- <view class="give-info">
                <view class="title">配送服务</view>
                <view class="content">美团配送</view>
            </view>
            <view class="give-info">
                <view class="title">期望时间</view>
                <view class="content">立即配送</view>
            </view> -->
                <view class="give-info">
                    <view class="title">配送地址</view>
                    <view class="content">
                        <view>{{addressUser}}</view>
                    </view>
                </view>
                <view class="content">
                    <view>{{info.addressInfo.address_num}}</view>
                    <view>{{info.addressInfo.address}}</view>
                </view>
            </view>
        </view>
        <view class="card">
            <view class="card-head">订单信息</view>
            <view class="card-body">
                <view class="give-info">
                    <view class="title">订单号</view>
                    <view class="content">{{info.order_id}}</view>
                </view>
                <view class="give-info">
                    <view class="title">下单时间</view>
                    <view class="content">{{info.add_time}}</view>
                </view>
                <view class="give-info" wx:if="{{info.state > 1}}">
                    <view class="title">支付时间</view>
                    <view class="content">{{info.payInfo.add_time}}</view>
                </view>
                <view class="give-info">
                    <view class="title">支付方式</view>
                    <view class="content">在线支付</view>
                </view>
                <view class="give-info">
                    <view class="title">订单备注</view>
                    <view class="content">{{info.remarks}}</view>
                </view>
            </view>
        </view>
        <view class="bottom-btn" wx:if="{{info.state ==0}}">
            <van-button type="danger" size="large" bind:click="payment">立即支付</van-button>
        </view>
    </view>
</view>