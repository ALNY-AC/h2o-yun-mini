<view class="box">
    <view class="stroeInfo">
        <view class="title">基本信息</view>
        <van-cell-group>
            <van-cell title-class='storeTitle' title="店铺图标">
                <van-uploader file-list="{{ fileList }}" bind:after-read="afterRead" />
            </van-cell>
            <van-field bind:input='o-model' data-model="form.logo" value='{{form.logo}}' clearable label="店铺图标" input-align="right" placeholder="请输入店铺名称" />
            <van-field bind:input='o-model' data-model="form.name" value='{{form.name}}' clearable label="店铺名称" input-align="right" placeholder="请输入店铺名称" />
            <van-field bind:input='o-model' data-model="form.info" value='{{form.info}}' clearable label="店铺简介" input-align="right" placeholder="请输入店铺简洁" />
            <van-cell title="店铺位置" is-link value="{{form.location==''?'选择位置':form.location}}" />
        </van-cell-group>
    </view>
    <view class="userInfo">
        <view class="title">店主信息</view>
        <van-cell-group>
            <van-field bind:input='o-model' data-model="form.contacts" value='{{form.contacts}}' clearable label="联系人" input-align="right" icon="question-o" placeholder="请输入联系人" />
            <van-field bind:input='o-model' data-model="form.phone" value='{{form.phone}}' clearable label="手机号" input-align="right" icon="question-o" placeholder="请输入手机号" />
            <van-field bind:input='o-model' data-model="form.QQ" value='{{form.QQ}}' clearable label="联系QQ" input-align="right" icon="question-o" placeholder="请输入联系QQ" />
        </van-cell-group>
    </view>
    <van-button type="primary" custom-class='fixed' bind:tap="save" block>保存</van-button>
</view>