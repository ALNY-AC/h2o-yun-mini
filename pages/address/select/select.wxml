  <block wx:for="{{listarr}}" wx:key="{{index}}">
    <van-panel style="margin-bottom:30rpx;" data-value="{{item.id}}" bind:tap="Choice">
      <view class="fontsizerpx" slot="header">
        <view class="header-body">
          <view class="top">
            <view>{{item.contacts+' '+ item.phone}}</view>
            <van-tag wx:if="{{item.tag}}" custom-class="tags">{{item.tag}}</van-tag>
          </view>
          <view class="bottom">{{item.address}}</view>
        </view>
      </view>
      <view class="operate-panel">
        <view class="operate-btn btn-color" wx:if="{{item.is_default == 1}}">默认地址</view>
        <view class="operate-btn" catch:tap="setup" data-item="{{item}}" wx:else>设为默认</view>
        <view style="display: flex;">
          <view class="operate" catch:tap="editaddress" data-item="{{item}}">
            <van-icon name="edit" style="font-size: 36rpx;" custom-class="icon-block" />
            编辑
          </view>
          <view class="operate" catch:tap="deleteaddress" data-item="{{item}}">
            <van-icon name="delete" style="font-size: 36rpx;" custom-class="icon-block" />
            删除
          </view>
        </view>
      </view>
    </van-panel>
  </block>
  <view class="address-bottom" bindtap="o-router" data-url="/pages/address/edit/edit">
    <text>新增收货地址</text>
  </view>
</view>