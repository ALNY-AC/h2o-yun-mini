<view class="test">
    <image src="{{userInfo.avatarUrl}}"></image>
    <view class="h2">{{userInfo.nickName?userInfo.nickName:'点击授权'}}</view>
    <view class="button-box">
        <button wx:if="{{!userInfo}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" type="primary">
            授权登录
        </button>
        <button wx:if="{{userInfo}}" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" type="primary">
            绑定手机号
        </button>
    </view>
</view>