.box{min-height:100vh;background-color:#f6f6f6;padding:10px}.box .data-panel{background:linear-gradient(180deg, #61cff8 0%, #32a1ee 100%);color:white;margin-bottom:15px;border-radius:5px}.box .data-panel .value-cell-group{display:flex;flex-wrap:nowrap;justify-content:center;align-items:center}.box .data-panel .value-cell-group:nth-child(1){border-bottom:1px solid rgba(255,255,255,0.5)}.box .data-panel .value-cell-group .value-cell{text-align:center;flex:1;padding:15px}.box .data-panel .value-cell-group .value-cell:nth-child(2){border-left:1px solid rgba(255,255,255,0.5)}.box .data-panel .value-cell-group .value-cell .title{font-size:16px}.box .data-panel .value-cell-group .value-cell .value{font-size:20px}.box .f-b{position:fixed;bottom:0;left:0}
