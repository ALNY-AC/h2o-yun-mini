.box{min-height:100vh;background-color:#f6f6f6}.box .info{background:linear-gradient(180deg, #61cff8 0%, #32a1ee 100%);color:white;padding:10px 19px;margin-bottom:15px;border-radius:5px;position:relative}.box .info .title{display:flex;font-size:20px;margin-bottom:18px}.box .info .title .title-name{flex:1;font-size:20px}.box .info .info{font-size:14px;display:flex;flex-direction:row;padding-bottom:15px}.box .info .info .num{flex:1;display:flex;flex-direction:column;justify-content:center;align-items:center}.box .info .info .num .num-title{font-size:11px;margin-bottom:5px}.box .info .info .num .num-number{font-size:16px}.box .info .bottom-border{background-color:#32a1ee;position:relative;left:0;bottom:-10px;width:100%;display:flex;flex-direction:row}.box .info .bottom-border .border-radius{background-color:#F6F6F6;width:14px;height:7px;margin:0 3px;border-radius:7px 7px 0 0}.box .fixed{position:fixed;bottom:0;left:0}
