<view class="box">
    <view class="panel">
        <view class="title">
            <view class="title-name">{{info.name}}</view>
            <view class="title-btn">
                <van-icon name="qr" bind:tap="del" />
            </view>
        </view>
        <view class="info">
            <view class="num">
                <view class="num-title">单价</view>
                <view class="num-number">{{info.price}}￥</view>
            </view>
            <view class="num">
                <view class="num-title">起购数量</view>
                <view class="num-number">{{info.min}}张</view>
            </view>
        </view>
        <view class="bottom-border">
            <view class="border-radius" wx:for="{{number}}" wx:key="index"></view>
        </view>
    </view>
    <view class="panel1">
        <view class="top">
            <view class="title">已收入</view>
            <view class="number">1000￥</view>
        </view>
        <view class="bottom">
            <view class="box1">
                <view class="title">库存剩余</view>
                <view class="number">{{info.stock}}</view>
            </view>
            <view class="box2">
                <view class="title">历史售出</view>
                <view class="number">2389</view>
            </view>
        </view>
    </view>
</view>