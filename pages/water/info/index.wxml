<view class="box">
    <water-card info="{{info}}"></water-card>
    <view class="data-panel">
        <div class="value-cell-group">
            <view class="value-cell">
                <view class="title">已收入</view>
                <view class="value">1000￥</view>
            </view>
        </div>
        <view class="value-cell-group">
            <view class="value-cell">
                <view class="title">库存剩余</view>
                <view class="value">{{info.stock}}</view>
            </view>
            <view class="value-cell">
                <view class="title">历史售出</view>
                <view class="value">2389</view>
            </view>
        </view>
    </view>
</view>
<view style="margin-bottom:15px">
    <van-panel title="可用商品">
        <view class="goods-list">
            <view class="goods-item" wx:for="{{3}}">
                <van-image width="100" height="100" src="https://img.yzcdn.cn/vant/cat.jpeg" />
                <view class="goods-title">商品标题商品标题商品标题</view>
            </view>
        </view>
    </van-panel>
</view>
<van-panel title="销售记录">
    <view class="user-card" wx:for="{{10}}">
        <van-image round width="40" height="40" src="https://img.yzcdn.cn/vant/cat.jpeg" />
        <view class="info-box">
            <view class="name">用户123123</view>
            <view class="time">下单时间：2020-05-01 00:00:00</view>
        </view>
        <view class="data-box">
            <view class="price">¥8888</view>
            <view class="count">x88</view>
        </view>
    </view>
</van-panel>
<view class="f-b">
    <van-button size="large" block color="#32A1EE">删除</van-button>
</view>