<view class="tool">
  <view class="tool-item" wx:for="{{ tool }}" data-url="{{item.url}}" data-ids="{{item.id}}" bind:tap="go">
    <view class="icon">
      <van-icon name="{{item.icon}}"></van-icon>
    </view>
    <text>{{item.word}}</text>
  </view>
</view>