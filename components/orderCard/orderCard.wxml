<view class="order-card">
    <view class="order-card-head">
        <view class="order-title">{{title}}</view>
        <view class="order-state">{{state}}</view>
    </view>
    <view class="order-card-body">
        <slot></slot>
        <view class="goods-bottom-box">
            <view style="font-size:25rpx" wx:if="{{totalPrice}}">
                <text>总价：</text>
                <text style="color:#f66">{{totalPrice}}￥</text>
            </view>
            <!-- <slot name="goods-bottom-box"></slot> -->
        </view>
    </view>
    <view class="order-card-footer">
        <slot name="footer"></slot>
    </view>
</view>