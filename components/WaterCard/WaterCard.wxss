.water-card{background:linear-gradient(180deg, #61cff8 0%, #32a1ee 100%);color:#fff;margin-bottom:30px;border-radius:5px;position:relative;padding-bottom:15px}.water-card .title-box{display:flex;align-items:center;font-size:20px;padding:20px 20px;margin-bottom:10px}.water-card .title-box .title-name{flex:1;font-size:20px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap}.water-card .title-box .qr-share{font-weight:bold;line-height:normal}.water-card .info-box{font-size:14px;display:flex;flex-wrap:nowrap;margin-bottom:25px}.water-card .info-box .info-item{flex:1;text-align:center}.water-card .info-box .info-item .info-title{font-size:16px;margin-bottom:5px}.water-card .info-box .info-item .info-value{font-size:20px}.water-card .bottom-border{position:absolute;bottom:-6px;left:50%;transform:translate3D(-50%, 0, 0);display:flex;flex-wrap:nowrap}.water-card .bottom-border .border-radius{background-color:#F6F6F6;width:15px;min-width:15px;height:15px;margin:0 3px;border-radius:100%}
